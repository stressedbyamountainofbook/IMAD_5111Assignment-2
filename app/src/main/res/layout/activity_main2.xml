<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paw"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="81dp"
        android:layout_height="47dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="48dp"
        android:autoSizeTextType="uniform"
        android:background="#512DA8"
        android:fontFamily="@font/black_and_white_picture"
        android:gravity="center"
        android:text="@string/hunger"
        android:textColor="#B0BEC5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_feed" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="84dp"
        android:layout_height="46dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="48dp"
        android:autoSizeTextType="uniform"
        android:background="#512DA8"
        android:fontFamily="@font/creepster"
        android:gravity="center"
        android:text="@string/happiness"
        android:textColor="#B0BEC5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="84dp"
        android:layout_height="45dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="48dp"
        android:autoSizeTextType="uniform"
        android:background="#512DA8"
        android:fontFamily="@font/creepster"
        android:gravity="center"
        android:text="@string/cleanliness"
        android:textColor="#B0BEC5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btn_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="104dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/creepster"

        android:gravity="center"
        android:text="@string/clean"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="104dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/creepster"
        android:gravity="center"
        android:text="@string/feed"
        app:layout_constraintStart_toEndOf="@+id/btn_clean"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="104dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/creepster"
        android:gravity="center"
        android:text="@string/play"
        app:layout_constraintStart_toEndOf="@+id/btn_feed"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/txt_hunger"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="100dp"
        android:autoSizeTextType="uniform"
        android:autofillHints=""
        android:background="#512DA8"
        android:ems="10"
        android:fontFamily="@font/creepster"
        android:gravity="center"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_feed"
        tools:ignore="LabelFor,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/txt_happy"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="100dp"
        android:autoSizeTextType="uniform"
        android:background="#512DA8"
        android:ems="10"
        android:fontFamily="@font/creepster"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="#F4F0F0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_clean"
        tools:ignore="LabelFor,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/txt_clean"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="100dp"
        android:autoSizeTextType="uniform"
        android:background="#512DA8"
        android:ems="10"
        android:fontFamily="@font/creepster"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="#EFEAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_hunger"
        tools:ignore="LabelFor,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="71dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/petimage1"
        android:importantForAccessibility="no" />
</androidx.constraintlayout.widget.ConstraintLayout>